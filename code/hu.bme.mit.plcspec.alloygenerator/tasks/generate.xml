<?xml version="1.0" encoding="UTF-8"?>
<project default="generate" name="hu.bme.mit.plcspec.alloygenerator">
    <property name="ECLIPSE_HOME" value="../../../../../../../../../eclipse/modeling-latest-released/Eclipse.app/Contents/MacOS"/>
    <property name="ECLIPSE_WORKSPACE" value="../../../../../../../../../Documents/workspace"/>

    <!-- The classpath with only the dependencies used by the project -->
    <path id="hu.bme.mit.plcspec.alloygenerator.libraryclasspath">
        <pathelement location="${ECLIPSE_WORKSPACE}/hu.bme.mit.plcspec.alloygenerator/bin"/>
    </path>

    <path id="hu.bme.mit.plcspec.alloygenerator.classpath">
        <path refid="hu.bme.mit.plcspec.alloygenerator.libraryclasspath"/>
    </path>

    <!-- The classpath with only the jars available in the plugin folder of Eclipse -->
    <path id="hu.bme.mit.plcspec.alloygenerator.libraryclasspath.alljars">
        <pathelement location="../hu.bme.mit.plcspec.alloygenerator/bin"/>
        <fileset dir="${ECLIPSE_HOME}/plugins/" includes="*.jar"/>
    </path>

    <path id="hu.bme.mit.plcspec.alloygenerator.classpath.alljars">
        <path refid="hu.bme.mit.plcspec.alloygenerator.libraryclasspath.alljars"/>
    </path>

    <!-- The default task with the jars used by this project -->
    <target name="generate">
        <java classname="org.eclipse.acceleo.module.sample.common.Generate" classpathref="hu.bme.mit.plcspec.alloygenerator.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>

    <!--
        In case of problem you can also try with all the jar available in your Eclipse
        Keep in mind that having two versions of the same jar can create problems
    -->
    <target name="generate.alljars">
        <java classname="org.eclipse.acceleo.module.sample.common.Generate" classpathref="hu.bme.mit.plcspec.alloygenerator.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>
</project>
